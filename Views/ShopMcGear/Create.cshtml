@model ShopProduct
@{
    ViewData["Title"] = "Create";
}

<h1>Create McGear</h1
    @Html.ValidationSummary()


<div class="row detailsFrame imputFrame">
    <div class="formContainer">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="UrlPicture" class="control-label"></label>
                <input asp-for="UrlPicture" class="form-control" />
                <span asp-validation-for="UrlPicture" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <div class="form-group">
    <input value="Back to category" onclick="location.href='@Url.Action("Index", "ShopMcGear")'" class="btn btn-primary" />
</div>
        </form>
    </div>
</div>